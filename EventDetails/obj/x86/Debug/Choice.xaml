<Page
    x:Class="EventDetails.Choice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventDetails"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource SystemControlAcrylicWindowMediumHighBrush}" >

    <StackPanel>
        <RelativePanel Background="{StaticResource SystemControlBackgroundAccentBrush}">
            <Button x:ConnectionId='3' 
                x:Name="LogOutButton" 
                RelativePanel.AlignRightWithPanel="True" 
                Background="{StaticResource SystemControlBackgroundAltMediumBrush}"
                Content="Log out" 
                                           />
        </RelativePanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:ConnectionId='1' 
                Name="register" 
                Width="100" 
                Margin="0,0,20,0" 
                Content="Register"
                Background="{StaticResource SystemControlBackgroundAccentBrush}"
                                       />
            <Line Stretch="Fill" Margin="0,30,5,0" Height="600" Stroke="{StaticResource SystemControlBackgroundAccentBrush}" X1="0" Y1="0" X2="0" Y2="1"/>
            <Line Stretch="Fill" Margin="5,30,0,0" Height="600" Stroke="{StaticResource SystemControlBackgroundAccentBrush}" X1="0" Y1="0" X2="0" Y2="1"/>
            <Button x:ConnectionId='2' 
                Name="edit" 
                Width="100" 
                Margin="20,0,0,0" 
                Background="{StaticResource SystemControlBackgroundAccentBrush}"
                Content="Edit" 
                                   />
        </StackPanel>
    </StackPanel>
</Page>

