<Page
    x:Class="EventDetails.Edit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventDetails"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel MinWidth="1280" Background="{ThemeResource SystemControlAcrylicWindowMediumHighBrush}">
            <RelativePanel>
                <Button 
                    x:Name="BackButton" 
                    RelativePanel.AlignLeftWithPanel="True" 
                    Content="&#xE0A6;" 
                    FontFamily="Segoe MDL2 Assets"
                    Click="backbutton_click" />
                <Button 
                    x:Name="LogOutButton" 
                    RelativePanel.AlignRightWithPanel="True" 
                    Content="Log out" 
                    Click="logoutbutton_click" />
            </RelativePanel>
            <StackPanel Height="Auto" Margin="0,50,0,0">
                <TextBlock 
                    Text="Edit Event Details" 
                    FontSize="48" 
                    HorizontalAlignment="Center" />
            </StackPanel>
            <Grid Margin="50,0,50,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Margin="0,20,40,0">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock 
                                Text="Type" 
                                FontSize="20" 
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Left" />
                            <ComboBox
                                x:Name="Type"
                                Grid.Row="1"
                                VerticalAlignment="Stretch"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Stretch"
                                SelectionChanged="ComboBox_SelectionChanged">
                                <ComboBoxItem Content="Technical" />
                                <ComboBoxItem Content="Non-Technical" />
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock 
                                Text="Department" 
                                FontSize="20" 
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Left" />
                            <ComboBox
                                x:Name="Department"
                                Grid.Row="1"
                                VerticalAlignment="Stretch"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="False"
                                SelectionChanged="Department_SelectionChanged">
                                <ComboBoxItem Content="Computer/IT" />
                                <ComboBoxItem Content="Civil" />
                                <ComboBoxItem Content="Electrical"/>
                                <ComboBoxItem Content="Mechanical/Production"/>
                                <ComboBoxItem Content="EC/EL"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock 
                        Margin="0,20,0,0"
                        Text="Event Name" 
                        FontSize="20" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Left" 
                        Grid.Row="2" />
                    <TextBox
                        x:Name="TextBox1" 
                        Margin="0,10,0,0" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Grid.Row="3" />
                    <TextBlock 
                        Margin="0,20,0,0"
                        Text="Tag Line" 
                        FontSize="20" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Left" 
                        Grid.Row="4" />
                    <TextBox
                        x:Name="TextBox2" 
                        Margin="0,10,0,0" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        Grid.Row="5" />
                    <TextBlock 
                        Margin="0,20,0,0"
                        Text="Description" 
                        FontSize="20" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Left" 
                        Grid.Row="6" />
                    <TextBox
                        x:Name="TextBox3" 
                        Margin="0,10,0,0" 
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Grid.Row="7"
                        Height="100"
                        TextWrapping="Wrap" />
                    <TextBlock 
                        Text="Number of Participants" 
                        Margin="0,20,0,0"
                        FontSize="20" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Left" 
                        Grid.Row="8"/>
                    <TextBox
                        x:Name="TextBox4" 
                        Margin="0,10,0,0" 
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Grid.Row="9"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Stretch" Grid.Column="1" Margin="20,20,20,0">
                    <StackPanel>
                        <TextBlock 
                            Text="Fees" 
                            FontSize="20" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Left" 
                            Grid.Row="0" />
                        <TextBox
                            x:Name="TextBox5" 
                            Margin="0,10,0,0" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Stretch"
                            Grid.Row="1" />
                    </StackPanel>
                    <TextBlock 
                        Margin="0,20,0,0"
                        Text="Manager Details" 
                        FontSize="20" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Left" />
                    <StackPanel x:Name="Manager"  HorizontalAlignment="Stretch">
                        <TextBlock 
                            Margin="0,10,0,0"
                            Text="Manager 1" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Left"/>
                        <TextBox
                            x:Name="TextBox6" 
                            Margin="0,10,0,0"
                            PlaceholderText="Name"
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Stretch" />
                        <TextBox
                            x:Name="TextBox7" 
                            PlaceholderText="Phone Number"
                            Margin="0,10,0,0" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button 
                            Name="addManager" 
                            Margin="0,20,20,0" 
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Click="Add_Manager">
                            Add Manager
                        </Button>
                        <Button 
                            Name="removeManager" 
                            Margin="20,20,0,0"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Click="Remove_Manager">
                            Remove Manager
                        </Button>
                    </StackPanel>
                    <TextBlock 
                        Name="Warning1" 
                        Margin="0,10,0,0" 
                        Visibility="Collapsed" 
                        Foreground="#FFEE1F1F" />
                </StackPanel>
                <StackPanel Margin="40,20,0,0" Grid.Column="2" HorizontalAlignment="Stretch">
                    <StackPanel x:Name="Rounds">
                        <TextBlock 
                            Text="Round Details" 
                            FontSize="20" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Left" />
                        <TextBox
                            x:Name="TextBox8" 
                            Margin="0,10,0,0" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Stretch" 
                            Height="100"
                            PlaceholderText="Round 1"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button 
                            Name="AddRound" 
                            Margin="0,0,0,0"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Click="AddRound_Click">
                            Add Round
                        </Button>
                        <Button 
                            Name="RemoveRound" 
                            Margin="40,0,0,0"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Click="RemoveRound_Click" 
                            Visibility="Visible">
                            Remove Round
                        </Button>
                    </StackPanel>
                    <TextBlock 
                        Name="Warning2" 
                        Margin="0,10,0,0" 
                        Visibility="Collapsed" 
                        Foreground="#FFEE1F1F"/>
                    <Button 
                        Margin="0,20,0,0" 
                        x:Name="submit" 
                        Content="Submit" 
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center" 
                        Click="submit_Click" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>